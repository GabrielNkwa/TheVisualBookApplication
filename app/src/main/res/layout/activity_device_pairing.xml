<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".DevicePairingActivity"
    android:background="@mipmap/ic_launcher_background_foreground">

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scaleType="fitXY"
         />

    <TextView
        android:id="@+id/pageIntro"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:text="Scan the QR Code below for quick and easy pairing between your Visual Book and mobile device"
        android:textStyle="bold"
        android:textSize="30sp"
        android:textAlignment="center"
        android:layout_margin="60dp" />

    <TextView
        android:id="@+id/txtvw"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="0px"/>

    <ImageView
        android:id="@+id/pairingCode"
        android:layout_width="400dp"
        android:layout_height="400dp"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true"
        android:textStyle="bold"
        android:textSize="40dp"
        android:backgroundTint="@color/zxing_transparent"
        android:scaleType="fitXY"/>

    <Button
        android:id="@+id/pairingContinue"
        android:layout_width="700dp"
        android:layout_height="60dp"
        android:layout_below="@+id/pairingCode"
        android:layout_centerHorizontal="true"
        android:background="@drawable/button_style01"
        android:layout_marginTop="120dp"
        android:layout_marginRight="40dp"
        android:layout_marginLeft="40dp"
        android:text="Scan and Continue"
        android:textStyle="bold"
        android:textAllCaps="false"/>

    <TextView
        android:id="@+id/retrievedEmail"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="0dp"/>

    <TextView
        android:id="@+id/retrievedPassword"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="0dp"/>

</RelativeLayout>