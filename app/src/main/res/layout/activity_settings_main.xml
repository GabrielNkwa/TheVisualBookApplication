<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".SettingsMainActivity">

    <TextView
        android:id="@+id/pageTag"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:text="Settings"
        android:textSize="35sp"
        android:textStyle="bold"
        android:layout_margin="25dp"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_below="@+id/pageTag"
        android:layout_margin="10dp">

        <TextView
            android:id="@+id/ownerName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textStyle="bold"
            android:textSize="18sp"/>

        <TextView
            android:id="@+id/ownerEmail"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textStyle="normal"
            android:textSize="18sp"/>

        <TextView
            android:id="@+id/ownerConnectCode"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textStyle="normal"
            android:textSize="18sp"/>

    </LinearLayout>

    <Button
        android:id="@+id/connectWiFi"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Connect WiFi"
        android:layout_above="@+id/changeLang"
        android:textAllCaps="false"/>

    <Button
        android:id="@+id/changeLang"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Change Language"
        android:layout_marginBottom="20dp"
        android:layout_above="@+id/updateLink"
        android:textAllCaps="false"/>

    <TextView
        android:id="@+id/updateLink"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@id/unpairDevice"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="100dp"
        android:text="Software Update"
        android:textSize="20sp"/>

    <Button
        android:id="@+id/unpairDevice"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="20dp"
        android:text="Unpair Device"
        android:textAllCaps="false"/>

</RelativeLayout>